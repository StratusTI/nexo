{
  "name": "nexo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 44385",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "format:check": "biome format --check",
    "test:unit": "vitest run",
    "prisma:generate": "prisma generate --schema=./prisma/elo/schema.prisma && prisma generate --schema=./prisma/steel/schema.prisma",
    "prisma:studio:steel": "prisma studio --schema=./prisma/steel/schema.prisma",
    "prisma:studio:elo": "cross-env SELECTED_SCHEMA=elo prisma studio",
    "prisma:pull:steel": "cross-env SELECTED_SCHEMA=steel prisma db pull",
    "prisma:pull:elo": "cross-env SELECTED_SCHEMA=elo prisma db pull",
    "prisma:validate": "prisma validate && prisma format",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "6.18.0",
    "@scalar/nextjs-api-reference": "^0.9.9",
    "jose": "^6.1.3",
    "next": "16.1.1",
    "pnpm": "^10.27.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "prisma": "6.18.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.17"
  }
}
